.outer-wrapper
  display flex

  width 100%
  height 100%

  .left
    display flex
    padding 20px
    flex-flow column nowrap
    justify-content flex-start
    flex 0 0 auto

    width 50%
    height 100%

    background dodgerblue

    overflow-y auto

    .players
      .player
        padding 20px

        margin-bottom 20px

        background white
        border-radius 3px

        box-shadow 0 5px 10px alpha(#000, 0.08)

        font-family Lato
        font-size 17px

        .line
          margin-bottom 10px

          input
            width 300px
            padding 8px 10px
            padding-right 48px

            border 1px solid #aaa

            color #333
            font-family Lato
            font-size 17px

            background transparent

            outline none
            border-radius 3px


          button
            padding 8px 15px

            color white
            font-family Lato
            font-size 16px
            font-weight bold

            outline none

            border none
            border-radius 3px
            background dodgerblue

            cursor pointer

  .right
    display flex
    flex-flow column nowrap

    flex 0 0 auto
    width 50%

    overflow hidden

    .top
      padding 20px
      font-family Lato
      font-size 17px

      form
        .line
          display flex
          margin-bottom 10px

          .cell
            flex 1 1 auto

    .middle
      padding 20px
      flex 0 0 auto
      height 50%

      border-top 1px solid #ddd
      border-bottom 1px solid #ddd

      overflow-y auto

      .title
        font-family Lato
        font-size 17px
        font-weight bold

        margin-bottom 10px

      .player
        padding 20px

        background white
        border-radius 3px

        box-shadow 0 5px 10px alpha(#000, 0.08)

        font-family Lato
        font-size 17px

        .line
          margin-bottom 10px

          input
            width 300px
            padding 8px 10px
            padding-right 48px

            border 1px solid #aaa

            color #333
            font-family Lato
            font-size 17px

            background transparent

            outline none
            border-radius 3px

    .bottom
      flex 0 0 auto
      height 50%
      padding 20px

    button
      padding 8px 15px
      margin-right 10px

      border none
      outline none
      background dodgerblue

      color white
      font-family Lato
      font-weight bold
      font-size 17px
      border-radius 3px

      cursor pointer
