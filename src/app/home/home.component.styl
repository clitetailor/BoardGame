.outer-wrapper
  display flex

  width 100%
  height 100%

  .left
    display flex
    flex-flow column nowrap

    justify-content center
    flex 0 0 auto

    width 50%

    background gold

    box-shadow 2px 0 5px alpha(#000, 0.1)

    z-index 1

    nav.navbar
      display flex
      width 100%
      height 60px

      margin-bottom 30px

      color white
      font-family Cambria, Cochin, Georgia, Times, Times New Roman, serif
      justify-content center
      font-size 36px

    .content
      display flex
      justify-content center
      align-items center

      .center
        justify-content center

      .line
        display flex
        margin-bottom 20px

        input
          width 400px
          padding 10px 30px
          align-self center

          border none
          outline none
          border-radius 3px

          color #333

          font-family Lato Light
          font-size 24px

          box-shadow 0 5px 10px alpha(#000, 0.08)

        button
          padding 8px 30px
          margin-left 5px
          margin-right 5px
          align-self center

          border none
          outline none
          border-radius 3px

          color white

          background dodgerblue

          font-family Lato
          font-size 20px

          cursor pointer

          box-shadow 0 5px 10px alpha(#000, 0.08)

          a
            text-decoration none
            color white

  .right
    display flex
    flex 0 0 auto
    width 50%

    justify-content center
    align-items center

    overflow hidden

    img
      height 100%
