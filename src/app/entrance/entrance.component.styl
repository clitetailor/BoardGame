.outer-wrapper
  display flex

  width 100%
  height 100%

  .left
    display flex
    flex-flow column nowrap

    flex 0 0 auto
    width 50%
    padding 20px

    overflow hidden

    background linear-gradient(45deg, lightseagreen, dodgerblue)

    .search
      width 360px
      padding 8px 30px
      align-self center

      border none
      outline none
      border-radius 3px

      font-family Lato
      font-size 24px

      box-shadow 0 5px 10px alpha(#000, 0.08)

    .rooms
      display flex
      flex-flow column nowrap
      width 100%

      padding-top 20px

      .room
        padding 20px

        background white
        border-radius 3px

        box-shadow 0 5px 10px alpha(#000, 0.08)

      .line
        display flex
        margin-bottom 10px

        font-family Lato

        .cell
          flex 1 1 auto

        .id
          font-weight bold

        button
          padding 8px 15px

          color white
          background dodgerblue

          border-radius 3px

          outline none
          border none

          font-weight bold
          font-size 17px

  .right
    flex 0 0 auto
    width 50%
    padding 20px

    justify-content center
    align-items center

    overflow hidden

    form
      .line
        display flex
        margin-bottom 10px

        input
          flex 1 1 auto
          width 300px
          padding 8px 15px
          outline none
          border 1px solid #ddd

          border-radius 3px

          font-family Lato
          font-size 20px

          box-shadow 0 0 10px alpha(dodgerblue, 0.08) inset

        button
          padding 8px 15px
          font-family Lato

          outline none
          border none
          background dodgerblue

          border-radius 3px

          font-family Lato
          font-weight bold
          font-size 17px

          a
            color white
            text-decoration none
