.outer-wrapper
  display flex
  justify-content center
  align-items center

  width 100%
  height 100%

  .image
    position absolute
    top 0; left 0; right 0; bottom 0

    background url('../../assets/chess.jpg')
    background-size cover
    filter gray
    -webkit-filter grayscale(100%)

    opacity 0.5

    z-index -1


  form
    display flex
    flex-flow column nowrap
    justify-content center
    align-items center

    .center
      justify-content center

    .line
      display flex
      margin-bottom 20px

      input
        width 400px
        padding 10px 30px
        align-self center

        border none
        outline none
        border-radius 3px

        color #333

        font-family Lato Light
        font-size 24px

        box-shadow 0 5px 10px alpha(#000, 0.08)

      button
        padding 8px 30px
        margin-left 5px
        margin-right 5px
        align-self center

        border none
        outline none
        border-radius 3px

        color white

        background dodgerblue

        font-family Lato
        font-size 20px

        box-shadow 0 5px 10px alpha(#000, 0.08)

        cursor pointer

        a
          text-decoration none
          color white
